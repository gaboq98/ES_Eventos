@model ES_Eventos_web_app.Models.Paquete

<div>
    <h4>Paquete</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.precio)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.precio)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.descripcion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.descripcion)
        </dd>

    </dl>
</div>
<div class="d-flex justify-content-between">
    <div class="p-2">
            <p class="p-3">
                @using (Html.BeginForm("Index", "Paquetes"))
                {
                    <button type="submit" class="btn btn-primary mr-1">Volver</button>
                }
            </p>
    </div>
    <div class="p-2">
        @using (Html.BeginForm("Details", "Paquetes", new { idP =  Model.id}))
        {
            <button type="submit" class="btn btn-success mr-1">Reservar</button>
        }
    </div>
</div>

